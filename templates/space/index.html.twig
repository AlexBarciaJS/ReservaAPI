{% extends 'base.html.twig' %}

{% block title %}Space index{% endblock %}

{% block body %}
    <h1>Space index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Capacity</th>
                <th>PhotoUrl</th>
                <th>AvailableFrom</th>
                <th>AvailableTo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for space in spaces %}
            <tr>
                <td>{{ space.id }}</td>
                <td>{{ space.name }}</td>
                <td>{{ space.description }}</td>
                <td>{{ space.capacity }}</td>
                <td>{{ space.photoUrl }}</td>
                <td>{{ space.availableFrom ? space.availableFrom|date('H:i:s') : '' }}</td>
                <td>{{ space.availableTo ? space.availableTo|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_space_show', {'id': space.id}) }}">show</a>
                    <a href="{{ path('app_space_edit', {'id': space.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_space_new') }}">Create new</a>
{% endblock %}
