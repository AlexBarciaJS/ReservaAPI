{% extends 'base.html.twig' %}

{% block title %}Space{% endblock %}

{% block body %}
    <h1>Space</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ space.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ space.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ space.description }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ space.capacity }}</td>
            </tr>
            <tr>
                <th>PhotoUrl</th>
                <td>{{ space.photoUrl }}</td>
            </tr>
            <tr>
                <th>AvailableFrom</th>
                <td>{{ space.availableFrom ? space.availableFrom|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AvailableTo</th>
                <td>{{ space.availableTo ? space.availableTo|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_space_index') }}">back to list</a>

    <a href="{{ path('app_space_edit', {'id': space.id}) }}">edit</a>

    {{ include('space/_delete_form.html.twig') }}
{% endblock %}
